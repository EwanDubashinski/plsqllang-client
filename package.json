{
   "publisher": "EwanDubashinski",
   "name": "plsqllint",
   "displayName": "PL/SQL Linter",
   "description": "PL/SQL Linter (Syntax checker)",
   "version": "0.0.4",
   "icon": "media/icon.png",
   "engines": {
      "vscode": "^1.75.0"
   },
   "categories": [
      "Programming Languages",
      "Linters"
   ],
   "main": "./out/extension.js",
   "contributes": {
      "configuration": [
         {
            "title": "PL/SQL Linter",
            "properties": {
               "plsqllint.javaHome": {
                  "type": "string",
                  "description": "Path to JAVA_HOME, used for extension"
               }
            }
         }
      ],
      "languages": [
         {
            "id": "plsql",
            "aliases": [
               "PLSQL",
               "PL/SQL",
               "pl/sql",
               "plsql"
            ],
            "extensions": [
               ".sql",
               ".ddl",
               ".dml",
               ".pkh",
               ".pks",
               ".pkb",
               ".pck",
               ".pls",
               ".plb",
               ".bdy",
               ".fnc",
               ".idx",
               ".mv",
               ".prc",
               ".prg",
               ".sch",
               ".seq",
               ".spc",
               ".syn",
               ".tab",
               ".tbl",
               ".tbp",
               ".tps",
               ".trg",
               ".typ",
               ".vw"
            ],
            "configuration": "./lang-conf/plsql.configuration.json"
         }
      ]
   },
   "scripts": {
      "compile": "tsc -p ./",
      "watch": "tsc -watch -p ./",
      "postinstall": "node ./node_modules/vscode/bin/install",
      "test": "npm run compile && node ./node_modules/vscode/bin/test",
      "vscode:prepublish": "npm run esbuild-base -- --minify",
      "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
      "esbuild": "npm run esbuild-base -- --sourcemap",
      "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
      "test-compile": "tsc -p ./"
   },
   "dependencies": {
      "vscode-languageclient": "^9.0.1"
   },
   "repository": {
      "url": "https://github.com/EwanDubashinski/plsqllang-client",
      "type": "git"
   },
   "license": "http://www.apache.org/licenses/LICENSE-2.0",
   "devDependencies": {
      "@types/mocha": "^10.0.6",
      "@types/node": "^20.11.7",
      "@types/vscode": "^1.75.0",
      "@vscode/test-electron": "2.3.9",
      "esbuild": "^0.19.12",
      "jest": "^29.7.0",
      "js-yaml": "^4.1.0",
      "tslint": "^6.1.3",
      "typescript": "^5.3.3",
      "vscode-test": "^1.6.1"
   }
}
