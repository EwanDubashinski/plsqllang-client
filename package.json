{
	"name": "plsql-lsp",
	"displayName": "plsql-lsp",
	"description": "PL/SQL language server",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.29.0"
	},
	"categories": [
		"Programming Languages"
	],
   "activationEvents": [
      "onLanguage:plsql"
   ],
	"main": "./out/extension.js",
	"contributes": {
      "languages": [
          {
              "id": "plsql",
              "aliases": [
                  "PLSQL",
                  "PL/SQL",
                  "plsql"
              ],
              "extensions": [
                  ".sql",
                  ".ddl",
                  ".dml",
                  ".pkh",
                  ".pks",
                  ".pkb",
                  ".pck",
                  ".pls",
                  ".plb",

                  ".bdy",
                  ".fnc",
                  ".idx",
                  ".mv",
                  ".prc",
                  ".prg",
                  ".sch",
                  ".seq",
                  ".spc",
                  ".syn",
                  ".tab",
                  ".tbl",
                  ".tbp",
                  ".tps",
                  ".trg",
                  ".typ",
                  ".vw"
              ]
          }
      ]
   },
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"dependencies": {
		"vscode-languageclient": "^3.3.0"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"tslint": "^5.12.1",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42"
	}
}
